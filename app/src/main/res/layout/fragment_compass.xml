<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hiker.app.fragments.CompassFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="@string/textDefaultValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLattitude"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:text="@string/textDefaultValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLongitude"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bousole"
        android:id="@+id/bousole"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/contentDescriptionCompassImage"
        android:scaleType="centerInside" />

</RelativeLayout>